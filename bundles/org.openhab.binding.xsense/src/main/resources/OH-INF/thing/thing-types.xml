<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="xsense"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="bridge">
		<label>Bridge</label>
		<description>Bridge for XSense cloud</description>

		<config-description>
			<parameter name="username" type="text" required="true">
				<context>username</context>
				<label>XSense username</label>
				<description>Username to access the XSense account</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<context>password</context>
				<label>XSense password</label>
				<description>Password to access the XSense account</description>
			</parameter>
			<parameter name="refreshInterval" type="integer" unit="s" min="1">
				<label>Refresh Interval</label>
				<description>Interval updates are polled in seconds</description>
				<default>10</default>
				<advanced>true</advanced>
			</parameter>
		</config-description>
	</bridge-type>

	<thing-type id="XS01M" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>

		<label>XS01-M</label>
		<description>Item representing the XS01-M smokedetector</description>

		<channels>
			<channel id="battery-level" typeId="system.battery-level"/>
			<channel id="signal-strength" typeId="system.signal-strength"/>
			<channel id="command" typeId="sensor-command"/>
			<channel id="condition" typeId="sensor-condition"/>
		</channels>
	</thing-type>

	<thing-type id="SBS50" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>

		<label>SBS50</label>
		<description>Item representing the SBS50 basestation</description>

		<channels>
			<channel id="signal-strength" typeId="system.signal-strength"/>
			<channel id="voice-volume" typeId="system.volume"/>
		</channels>
	</thing-type>

	<channel-type id="sensor-condition">
		<item-type>String</item-type>
		<kind>trigger</kind>
		<label>Sensor Condition</label>
		<event>
			<options>
				<option value="OK">good condition</option>
				<option value="FAILED">bad condition</option>
			</options>
		</event>
	</channel-type>

	<channel-type id="sensor-command">
		<item-type>String</item-type>
		<label>Sensor Commands</label>
		<command>
			<options>
				<option value="TEST">Test Device</option>
				<option value="MUTE">Mute Alarm</option>
			</options>
		</command>
	</channel-type>

</thing:thing-descriptions>
